QPushButton#toolButton {
    color: #3C3C3C;
    border: 1px solid #eaeaea;
    border-radius: 6px;
    padding: -1px;
    width: 26px;
    height: 26px;
    icon-size: 26px;
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop: 0   #fefefe,
        stop: 0.2 #fcfcfc,
        stop: 0.8 #f9f9f9,
        stop: 1   #f6f6f6
    );
}

QPushButton#toolButton:hover {
    color: #6C6C6C;
    border: 1px solid #FFFFFF;
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:1,
        stop: 0   #FFFFFF,
        stop: 0.2 #FEFEFE,
        stop: 0.8 #FEFEFE,
        stop: 1   #FFFFFF
    );
}

QPushButton#toolButton:disabled {
    color: #6C6C6C;
    border: 1px solid #EFEFEF;
    background: #E8E8E8;
}

QPushButton#toolButton:pressed {
    color: #4C4C4C;
    border: 1px inset #8C8C8C;
    margin-top: 3px;
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop: 0   #D8D8D8,
        stop: 0.2 #E6E6E6,
        stop: 0.8 #EFEFEF,
        stop: 1   #FAFAFA
    );
}

QPushButton#toolButton:checked {
    color: #4C4C4C;
    border: 1px inset #8C8C8C;
    margin-top: 2px;
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop: 0   #D8DFF0,
        stop: 0.2 #E6EFF3,
        stop: 0.8 #EFF2F8,
        stop: 1   #FAFCFF
    );
}

